@{
  Layout = "_Layout";
}
@using PierresTreats.Models;
<h1 class="text-warning">@ViewBag.Message</h1>
<h1>Treats</h1>
<hr>
@if(Model.Count != 0)
{
  <form method="post" action="/Treats/MassDelete">
    <table>
      @foreach (Treat item in Model)
      {
        <tr>
          <td>@Html.ActionLink($"{item.TreatName}", "Details", "Treats", new {id = item.TreatId})</td>
          <td><input type="checkbox" name="deleteWho" value="@item.TreatId"></td>
        </tr>
      }
    </table>
    <input type="submit", value="Delete the selected treats">
  </form>
}
@Html.ActionLink("Add a new treat", "Create", "Treats")
