@{
  Layout = "_Layout";
}
@using PierresTreats.Models;
<h1 class="text-warning">@ViewBag.Message</h1>
<h1>Treats</h1>
<hr>
@if(Model.Count != 0)
{
    <ul>
      @foreach (Treat item in Model)
      {
        <li>@Html.ActionLink($"{item.TreatName}", "Details", "Treats", new {id = item.TreatId})</li>
        <br>
      }
    </ul>
}
@Html.ActionLink("Add a new treat", "Create", "Treats")
