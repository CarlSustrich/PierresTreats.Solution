@{
  Layout = "_Layout";
}
@using PierresTreats.Models;
<h1 class="text-warning">@ViewBag.Message</h1>
<h1>Flavor Profiles</h1>
<hr>
@if(Model.Count != 0)
{
  <form method="post" action="/Flavors/MassDelete">
    <table>
      @foreach (Flavor item in Model)
      {
        <tr>
          <td>@Html.ActionLink($"{item.FlavorName}", "Details", "Flavors", new {id = item.FlavorId})</td>
          <td><input type="checkbox" name="deleteWho" value="@item.FlavorId"></td>
        </tr>
      }
    </table>
    <input type="submit", value="Delete the Flavor Profiles">
  </form>
}
@Html.ActionLink("Add a new flavor profile", "Create", "Flavors")
